@inject IOptions<AuthenticationOptions> AuthenticationOptions

@if (AuthenticationOptions.Value.DefaultAccount != null)
{
    <div id="dlg-login" class="modal fade" tabindex="-1" role="dialog">
        <form id="frm-login" asp-controller="account" asp-action="login">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Login</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <div id="dlg-login-error-message" class="alert alert-danger" role="alert">
                                <strong>Failed.</strong> The password is not correct.
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="dlg-login-password">Password</label>
                            <input name="password" type="password" class="form-control" id="dlg-login-password" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
}